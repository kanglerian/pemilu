<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Data <%= title %></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Calon Ketua</th>
                        <th>Calon Wakil Ketua</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% let no = 1; %>
                    <% data.forEach(element => { %>
                    <tr>
                        <td><%= no++ %></td>
                        <td><%= element.Ketua.nama_lengkap %></td>
                        <td><%= element.Wakil.nama_lengkap %></td>
                        <td>
                            <a type="button" class="badge badge-primary" data-toggle="modal"
                                data-target="#modalDetail<%= element.id %>">lihat</a>
                            <div class="modal fade" id="modalDetail<%= element.id %>" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Detail Paslon No. Urut <%= element.no_urut %></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <img src="<%= element.image %>" class="img-fluid">
                                            <p class="text-justify mt-3"><b>Visi:</b><br><%= element.visi %></p>
                                            <p class="text-justify mt-3"><b>Misi:</b><br><%= element.misi %></p>
                                            <div class="mt-2">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Tutup</button>
                                            <a href="<%= element.video %>" target="_blank" class="btn btn-danger btn-sm"><i class="fab fa-youtube"></i> Youtube</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="badge badge-primary">edit</a>
                            <a class="badge badge-danger">hapus</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="modalMisi" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>